<div class="col-md-4 col-md-offset-4 well">
    <h2 class="text-center">Ticket Manager</h2>

    <form class="form-horizontal col-md-12" name="login">
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" name="username" id="username" class="form-control" placeholder="Username">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" class="form-control" placeholder="Password">
        </div>
        <div class="form-group text-center">
            <a class="btn btn-link btn-small clearCookies">Clear cookies</a>
            <button type="button" class="btn btn-default btn-small ">
                <label class="checkbox-inline">
                    <input type="checkbox" name="remember" class="">
                    Remember me
                </label>
            </button>
            <button type="button" class="btn btn-primary btn-small login">Login</button>
        </div>
    </form>
</div>